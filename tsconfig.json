{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@app/*": ["src/frontend/app/*"],
      "@assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"]
    },
    "importHelpers": true,
    "skipLibCheck": true,
  },
  "include": [
    "vite.config.ts",
    "./src/frontend/**/*.ts",
    "./src/frontend/**/*.tsx",
    "./src/frontend/**/*.jsx",
    "./src/frontend/**/*.js",
  ],
  "exclude": ["node_modules",]
}
